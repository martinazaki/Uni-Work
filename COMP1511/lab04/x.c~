#include <stdio.h>

int main(void) {
    int size;
    printf("Enter size: ");
    scanf("%d", &size);
    
    int i = 0;
    while(i < size) {
        int j = 0;
        while(j < size) {
            if(i == j || i+j == size) {
            printf("*");
            } else {
            printf("-");
            }
            j = j + 1;
        }
    
        i = i + 1;
        printf("\n");
    }

    return 0;
}
