#include <stdio.h>

int main (void) {

    int array[10];
    int i;
    int num = 10;

    printf("Enter the elements of the array \n");

    for (i = 0; i < num; i++) {
        scanf("%d", &array[i]);

    }

    printf("Even numbers in the array are: ");
    
    for (i = 0; i < num; i++) {
        if (array[i] % 2 == 0) {
            printf("%d ", array[i]);

        }

    }

    printf("\n Odd numbers in the array are: ");

    for (i = 0; i < num; i++) {
        if (array[i] % 2 != 0) {
            printf("%d ", array[i]);

        }

    }

}
